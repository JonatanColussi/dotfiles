#!/usr/bin/env bash

# Install command-line tools using Homebrew
run_brew() {

	# Make sure weâ€™re using the latest Homebrew
	brew update

	# Taps
	brew tap homebrew/services
	brew tap caskroom/cask
	brew tap caskroom/fonts

	# Install GNU core utilities (those that come with OS X are outdated)
	brew install coreutils

	# Install GNU `find`, `locate`, `updatedb`, and `xargs`, g-prefixed
	brew install findutils
	brew install ngrep

	# Install Bash 4
	brew install bash

	# Completions
	brew install bash-completion2 gem-completion docker-completion launchctl-completion wpcli-completion

	# Install more recent versions of some OS X tools
	brew install vim --override-system-vi
	brew install grep
	brew install screen

	# Databases
	brew install mariadb
	brew install mongodb

	# Apache/PHP Stuff - https://gist.github.com/DragonBe/0faebe58deced34744953e3bf6afbec7
	brew install httpd
	brew install php71
	brew install composer

	#Python
	brew install python3

	#Ruby
	brew install ruby

	# Install wget with IRI support
	brew install wget --with-iri

	# Install useful binaries
	brew install ack
	brew install fasd
	brew install gpg
	brew install thefuck
	brew install git
	brew install httpie
	brew install jq
	brew install imagemagick --with-webp
	brew install lame
	brew install node
	brew install nvm
	brew install rename
	brew install tree
	brew install wp-cli
	#brew install android-platform-tools

	# Install code review tools
	brew tap codeclimate/formulae
	brew install codeclimate

	# Install git tools
	brew install hub
	brew install tig
	brew install git-extras

	# Install other tools
	brew install docker docker-machine docker-clean
	brew install watchman

	#brew link openssl --force

	# Remove outdated versions from the cellar
	brew cleanup
}
